{
  "version": "0.1.3",
  "license": "MIT",
  "name": "loxer",
  "author": "Christian Prinz",
  "module": "dist/loxer.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "docs": "typedoc --options typedoc.json"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/loxer.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/loxer.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.3",
    "@types/color": "^3.0.2",
    "eledoc": "^0.2.1",
    "husky": "^7.0.2",
    "size-limit": "^5.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typedoc": "^0.21.7",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "color": "^4.0.1"
  }
}
